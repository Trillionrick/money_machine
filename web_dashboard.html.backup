    <script>
        let ws = null;
        let isRunning = false;
        let wallets = {};
        let dryRunMode = true;
        let environmentMode = 'sandbox';
        let autoExecuteMode = false;
        let currentConfig = {};
        let aiState = { last_decision: null, last_trace: [] };
        let routeHealth = { failures: {}, blacklisted_routes: [], pair_results: {} };
        let routeLimitAll = false;

        // Connect to WebSocket
        function connectWebSocket() {
            const protocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
            ws = new WebSocket(`${protocol}//${window.location.host}/ws`);

            ws.onopen = () => {
                updateConnectionStatus(true);
                loadStatus();
                loadConfig();
            };

            ws.onmessage = (event) => {
                const message = JSON.parse(event.data);
                handleWebSocketMessage(message);
            };

            ws.onclose = () => {
                updateConnectionStatus(false);
                setTimeout(connectWebSocket, 3000);
            };

            ws.onerror = (error) => {
                console.error('WebSocket error:', error);
                updateConnectionStatus(false);
            };
        }

        function handleWebSocketMessage(message) {
            switch(message.type) {
                case 'init':
                    updateStats(message.data.stats);
                    updateWallets(message.data.wallets);
                    updateConnectors(message.data.connectors || []);
                    updateEnvironmentMode(message.data.environment || 'sandbox');
                    updateAiDecision(message.data.ai_state);
                    updateRouteHealth(message.data.route_health);
                    updateRunningState(message.data.running);
                    break;
                case 'stats_update':
                    updateStats(message.data);
                    updateWallets(message.wallets);
                    break;
                case 'status':
                    updateRunningState(message.running);
                    showAlert(message.message, message.running ? 'success' : 'warning');
                    updateConnectors(message.connectors || []);
                    if (message.environment) {
                        updateEnvironmentMode(message.environment);
                    }
                    break;
                case 'opportunity':
                    addOpportunity(message.data);
                    break;
                case 'trade':
                    addTrade(message.data);
                    break;
                case 'aqua_event':
                    addAquaEvent(message.data);
                    break;
                case 'ai_decision':
                    updateAiDecision({ last_decision: message.data, last_trace: message.trace });
                    break;
                case 'route_health':
                    updateRouteHealth(message.data);
                    break;
            }
        }

        function updateConnectionStatus(connected) {
            const status = document.getElementById('connectionStatus');
            if (connected) {
                status.innerHTML = '<div class="status-dot running"></div><span>Connected</span>';
            } else {
                status.innerHTML = '<div class="loading"></div><span>Reconnecting...</span>';
            }
        }

        async function loadStatus() {
            try {
                const response = await fetch('/api/status');
                const data = await response.json();
                updateStats(data.stats);
                updateWallets(data.wallets);
                updateRunningState(data.running);
                updateConnectors(data.connectors || []);
                if (data.environment) {
                    updateEnvironmentMode(data.environment);
                }
                updateAiDecision(data.ai_state);
                updateRouteHealth(data.route_health);
                if (data.opportunities) {
                    data.opportunities.forEach(addOpportunity);
                }
                if (data.trades) {
                    data.trades.forEach(addTrade);
                }
                const aquaRes = await fetch('/api/aqua/events');
                const aquaJson = await aquaRes.json();
                if (aquaJson.events) {
                    aquaJson.events.forEach(addAquaEvent);
                }
            } catch (error) {
                console.error('Failed to load status:', error);
            }
        }

        function updateStats(stats) {
            document.getElementById('uptime').textContent = formatUptime(stats.uptime_seconds || 0);
            document.getElementById('opportunitiesCount').textContent = stats.opportunities_found || 0;
            document.getElementById('tradesCount').textContent = stats.trades_executed || 0;
            document.getElementById('totalProfit').textContent = `${(stats.total_profit_eth || 0).toFixed(4)} ETH`;
            document.getElementById('gasPrice').textContent = `${(stats.gas_price_gwei || 0).toFixed(2)} Gwei`;
            document.getElementById('walletBalance').textContent = `${(stats.wallet_balance_eth || 0).toFixed(4)} ETH`;
            setExecutionMode();
        }

        function updateEnvironmentMode(mode) {
            environmentMode = mode === 'live' ? 'live' : 'sandbox';
            const toggle = document.getElementById('environmentToggle');
            if (toggle) {
                toggle.checked = environmentMode === 'live';
            }
            setExecutionMode();
        }

        function updateRunningState(running) {
            isRunning = running;
            const statusDot = document.getElementById('statusDot');
            const statusText = document.getElementById('statusText');
            const startBtn = document.getElementById('startBtn');
            const stopBtn = document.getElementById('stopBtn');

            if (running) {
                statusDot.className = 'status-dot running';
                statusText.textContent = 'Running';
                startBtn.disabled = true;
                stopBtn.disabled = false;
            } else {
                statusDot.className = 'status-dot stopped';
                statusText.textContent = 'Stopped';
                startBtn.disabled = false;
                stopBtn.disabled = true;
            }
            setExecutionMode();
        }

        async function startScanner() {
            try {
                dryRunMode = document.getElementById('dryRunToggle').checked;
                autoExecuteMode = document.getElementById('autoExecuteToggle').checked && !dryRunMode;
                const enableFlash = document.getElementById('flashToggle').checked;
                environmentMode = document.getElementById('environmentToggle').checked ? 'live' : 'sandbox';

                await updateConfig(true);

                const response = await fetch('/api/start', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        dry_run: dryRunMode,
                        enable_flash: enableFlash,
                        auto_execute: autoExecuteMode,
                        environment: environmentMode,
                    })
                });
                const data = await response.json();
                if (data.error) {
                    showAlert(data.error, 'error');
                } else {
                    showAlert('Scanner started successfully!', 'success');
                }
                setExecutionMode();
            } catch (error) {
                showAlert('Failed to start scanner: ' + error.message, 'error');
            }
        }

        async function stopScanner() {
            try {
                const response = await fetch('/api/stop', { method: 'POST' });
                const data = await response.json();
                if (data.error) {
                    showAlert(data.error, 'error');
                } else {
                    showAlert('Scanner stopped successfully!', 'success');
                }
            } catch (error) {
                showAlert('Failed to stop scanner: ' + error.message, 'error');
            }
        }

        function updateWallets(data) {
            if (!data) return;
            wallets = data;

            const meta = data.metamask || {};
            const rainbow = data.rainbow || {};

            document.getElementById('metamaskAddress').textContent = meta.address || 'Not set';
            document.getElementById('rainbowAddress').textContent = rainbow.address || 'Not set';

            const metaBalance = meta.balance_eth;
            const rainbowBalance = rainbow.balance_eth;

            const metaBalanceEl = document.getElementById('metamaskBalance');
            const rainbowBalanceEl = document.getElementById('rainbowBalance');

            if (metaBalance !== null && metaBalance !== undefined) {
                metaBalanceEl.textContent = `${metaBalance.toFixed(4)} ETH`;
                metaBalanceEl.className = 'pill green';
            } else {
                metaBalanceEl.textContent = '--';
                metaBalanceEl.className = 'pill gray';
            }

            if (rainbowBalance !== null && rainbowBalance !== undefined) {
                rainbowBalanceEl.textContent = `${rainbowBalance.toFixed(4)} ETH`;
                rainbowBalanceEl.className = 'pill green';
            } else {
                rainbowBalanceEl.textContent = '--';
                rainbowBalanceEl.className = 'pill gray';
            }
        }

        function updateConnectors(connectors) {
            const el = document.getElementById('connectorsList');
            if (!connectors || connectors.length === 0) {
                el.textContent = 'None';
                return;
            }
            el.textContent = connectors.join(', ');
        }

        function updateRouteHealth(health) {
            routeHealth = health || { failures: {}, blacklisted_routes: [], pair_results: {} };
            const blk = routeHealth.blacklisted_routes || [];
            const pairs = routeHealth.pair_results || {};
            const card = document.getElementById('routeHealthMeta');
            const blkCount = blk.length;
            const topPair = Object.entries(pairs).sort((a,b) => (b[1].wins || 0) - (a[1].wins || 0))[0];
            const topText = topPair ? `${topPair[0]} (${(topPair[1].wins||0)}/${(topPair[1].trades||0)})` : '‚Äî';
            card.textContent = `Blacklisted: ${blkCount} ¬∑ Top pair: ${topText}`;
            const summary = document.getElementById('routeHealthSummary');
            summary.textContent = `${Object.keys(routeHealth.failures || {}).length} routes`;

            const tbody = document.querySelector('#routeTable tbody');
            tbody.innerHTML = '';
            const entries = Object.entries(routeHealth.failures || {}).sort((a,b) => b[1] - a[1]);
            const limited = routeLimitAll ? entries : entries.slice(0, 10);
            const rows = limited;
            rows.forEach(([route, fails]) => {
                const tr = document.createElement('tr');
                const status = blk.includes(route) ? 'blacklisted' : 'active';
                tr.innerHTML = `<td>${route}</td><td>${fails}</td><td>${status}</td>`;
                tbody.appendChild(tr);
            });
        }

        function toggleRouteDetails() {
            const details = document.getElementById('routeDetails');
            const icon = document.getElementById('routeToggleIcon');
            const isHidden = details.classList.contains('hidden');
            if (isHidden) {
                details.classList.remove('hidden');
                icon.textContent = '‚ñº';
            } else {
                details.classList.add('hidden');
                icon.textContent = '‚ñ∂';
            }
        }

        function toggleRouteLimit() {
            routeLimitAll = !routeLimitAll;
            document.getElementById('routeLimitIcon').textContent = routeLimitAll ? '‚ñº' : '‚ñ∂';
            updateRouteHealth(routeHealth);
        }

        function updateAiDecision(state) {
            aiState = state || { last_decision: null, last_trace: [] };
            const decision = aiState.last_decision;
            const netEl = document.getElementById('aiDecisionNet');
            const confEl = document.getElementById('aiDecisionConfidence');
            const reasonEl = document.getElementById('aiDecisionReason');
            const metaEl = document.getElementById('aiDecisionMeta');

            if (!decision) {
                netEl.textContent = '--';
                confEl.textContent = 'Confidence: --';
                reasonEl.textContent = 'Reason: --';
                metaEl.textContent = 'No decision yet';
                return;
            }

            const netQuote = Number(decision.net_quote ?? 0);
            const confidence = Number(decision.confidence ?? 0);
            netEl.textContent = `${netQuote.toFixed(4)} quote`;
            confEl.textContent = `Confidence: ${confidence.toFixed(2)}`;
            reasonEl.textContent = `Reason: ${decision.reason || 'ok'}`;

            const parts = [];
            if (decision.symbol) parts.push(decision.symbol);
            parts.push(`hops ${decision.hop_count || 1}`);
            parts.push(`edge ${(Number(decision.edge_bps ?? 0)).toFixed(2)} bps`);
            if (decision.timestamp) {
                parts.push(new Date(decision.timestamp).toLocaleTimeString());
            }
            metaEl.textContent = parts.join(' ¬∑ ');
        }

        function addAquaEvent(evt) {
            if (!evt) return;
            const list = document.getElementById('aquaList');
            const pill = document.getElementById('aquaStatus');
            pill.className = 'pill green';
            pill.textContent = 'Active';

            const div = document.createElement('div');
            div.className = 'trade-item';
            div.innerHTML = `
                <div style="display:flex;justify-content:space-between;align-items:center;">
                    <strong>${evt.name}</strong>
                    <span class="timestamp">${evt.chain_id || ''} ¬∑ ${evt.block_number || ''}</span>
                </div>
                <div class="opportunity-details" style="margin-top:8px;">
                    <span><strong>Maker:</strong> ${evt.maker}</span>
                    <span><strong>App:</strong> ${evt.app}</span>
                    <span><strong>Strategy:</strong> ${evt.strategy_hash}</span>
                    ${evt.token ? `<span><strong>Token:</strong> ${evt.token}</span>` : ''}
                    ${evt.amount ? `<span><strong>Amount:</strong> ${evt.amount}</span>` : ''}
                    ${evt.tx_hash ? `<span><strong>Tx:</strong> ${evt.tx_hash}</span>` : ''}
                </div>
            `;
            if (list.firstChild && list.firstChild.classList.contains('alert')) {
                list.removeChild(list.firstChild);
            }
            list.prepend(div);
            while (list.childElementCount > 20) {
                list.removeChild(list.lastChild);
            }
        }

        async function loadConfig() {
            try {
                const res = await fetch('/api/config');
                const data = await res.json();
                if (!data.config) return;
                currentConfig = data.config;
                document.getElementById('edgeBase').value = data.config.min_edge_bps ?? 25;
                document.getElementById('edgePolygon').value = data.config.min_edge_bps_polygon ?? data.config.min_edge_bps ?? 25;
                document.getElementById('edgeCross').value = data.config.min_edge_bps_cross_chain ?? 30;
                document.getElementById('slippageInput').value = data.config.slippage_tolerance ?? 0.003;
                document.getElementById('profitFloorInput').value = data.config.profit_floor_quote ?? 0;
                document.getElementById('minMarginInput').value = data.config.min_margin_bps ?? 5;
                document.getElementById('protocolsInput').value = data.config.polygon_quote_protocols ?? 'UNISWAP_V3,QUICKSWAP_V3,QUICKSWAP';
                document.getElementById('polygonExecToggle').checked = data.config.enable_polygon_execution ?? false;
                const caps = data.config.gas_price_cap_gwei || {};
                document.getElementById('gasCapEth').value = caps.ethereum ?? '';
                document.getElementById('gasCapPolygon').value = caps.polygon ?? '';
                document.getElementById('initialCashInput').value = data.config.initial_cash ?? 0;

                // Update DRY_RUN status indicator
                updateDryRunIndicator(data.config.dry_run ?? true, data.config.trading_mode ?? 'paper');
            } catch (err) {
                console.error('Failed to load config', err);
            }
        }

        function updateDryRunIndicator(isDryRun, tradingMode) {
            const statusEl = document.getElementById('dryRunStatus');
            const textEl = document.getElementById('dryRunText');

            if (isDryRun) {
                // Safe mode - green
                statusEl.style.background = '#10b981';
                statusEl.style.color = 'white';
                textEl.textContent = 'DRY RUN MODE';
            } else {
                // Live trading - red warning
                statusEl.style.background = '#ef4444';
                statusEl.style.color = 'white';
                textEl.textContent = `‚ö†Ô∏è LIVE TRADING (${tradingMode.toUpperCase()})`;
                // Flash the indicator
                statusEl.style.animation = 'pulse 2s infinite';
            }
        }

        async function updateConfig(silent=false) {
            const payload = {
                min_edge_bps: parseFloat(document.getElementById('edgeBase').value || '0'),
                min_edge_bps_polygon: parseFloat(document.getElementById('edgePolygon').value || '0'),
                min_edge_bps_cross_chain: parseFloat(document.getElementById('edgeCross').value || '0'),
                slippage_tolerance: parseFloat(document.getElementById('slippageInput').value || '0'),
                profit_floor_quote: parseFloat(document.getElementById('profitFloorInput').value || '0'),
                min_margin_bps: parseFloat(document.getElementById('minMarginInput').value || '0'),
                gas_price_cap_eth: parseFloat(document.getElementById('gasCapEth').value || '0') || null,
                gas_price_cap_polygon: parseFloat(document.getElementById('gasCapPolygon').value || '0') || null,
                polygon_quote_protocols: document.getElementById('protocolsInput').value || undefined,
                initial_cash: parseFloat(document.getElementById('initialCashInput').value || '0'),
                enable_polygon_execution: document.getElementById('polygonExecToggle').checked,
                enable_execution: !document.getElementById('dryRunToggle').checked && document.getElementById('autoExecuteToggle').checked,
                // Flash loan settings
                min_flash_profit_eth: parseFloat(document.getElementById('minFlashProfitInput').value || '0.05'),
                max_flash_borrow_eth: parseFloat(document.getElementById('maxFlashBorrowInput').value || '10.0'),
                flash_loan_threshold_bps: parseFloat(document.getElementById('flashThresholdInput').value || '50'),
                slippage_tolerance_bps: parseFloat(document.getElementById('slippageToleranceBpsInput').value || '50'),
                // AI settings (off-chain hints)
                ai_min_profit_eth: parseFloat(document.getElementById('aiMinProfitEthInput').value || '0.05'),
                ai_confidence_threshold: parseFloat(document.getElementById('aiConfidenceInput').value || '0.6'),
                ai_max_gas_gwei: parseFloat(document.getElementById('aiMaxGasInput').value || '120'),
                ai_hop_penalty_quote: parseFloat(document.getElementById('aiHopPenaltyInput').value || '0'),
            };
            try {
                await fetch('/api/config/update', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload),
                });
                if (!silent) {
                    showAlert('Config applied', 'success');
                }
            } catch (err) {
                if (!silent) {
                    showAlert('Failed to apply config: ' + err.message, 'error');
                }
            }
        }

        function setExecutionMode() {
            const executionPill = document.getElementById('executionMode');
            const tradeStatus = document.getElementById('tradeStatus');
            const tradesList = document.getElementById('tradesList');
            const envLabel = environmentMode === 'live' ? 'Live env' : 'Sandbox';

            if (autoExecuteMode) {
                executionPill.textContent = `Auto-execution ¬∑ ${envLabel}`;
                executionPill.className = 'pill green';
                tradeStatus.textContent = 'Auto-execution enabled';
                tradeStatus.className = 'pill green';

                // Update the alert message to reflect active auto-execution
                if (tradesList.firstElementChild && tradesList.firstElementChild.classList.contains('alert')) {
                    tradesList.innerHTML = `
                        <div class="alert alert-success">
                            <strong>‚úÖ Auto-execution is active!</strong>
                            <p>The engine will automatically execute trades when profitable opportunities are detected that meet your configured thresholds.</p>
                        </div>
                    `;
                }
            } else {
                executionPill.textContent = dryRunMode ? `Dry run ¬∑ ${envLabel}` : `Manual ¬∑ ${envLabel}`;
                executionPill.className = environmentMode === 'live' ? 'pill green' : 'pill gray';
                tradeStatus.textContent = 'Auto-execution disabled';
                tradeStatus.className = 'pill gray';

                // Update the alert message to show how to enable auto-execution
                if (tradesList.firstElementChild && tradesList.firstElementChild.classList.contains('alert')) {
                    tradesList.innerHTML = `
                        <div class="alert">
                            <strong>‚ÑπÔ∏è No trades yet.</strong>
                            <p>Enable auto-execute to allow the engine to place trades when spreads meet your thresholds.</p>
                        </div>
                    `;
                }
            }
        }

        function addOpportunity(opp) {
            const container = document.getElementById('opportunitiesList');
            if (!opp) return;

            if (container.firstElementChild && container.firstElementChild.classList.contains('alert')) {
                container.innerHTML = '';
            }

            const item = document.createElement('div');
            item.className = 'opportunity-item';
            const timestamp = opp.timestamp ? new Date(opp.timestamp).toLocaleTimeString() : '--';

            item.innerHTML = `
                <div class="opportunity-header">
                    <span class="opportunity-symbol">${opp.symbol || ''}</span>
                    <span class="opportunity-profit">${(opp.edge_bps || 0).toFixed(2)} bps</span>
                </div>
                <div class="opportunity-details">
                    <span>Path: ${opp.execution_path || 'regular'}</span>
                    <span>CEX: ${(opp.cex_price || 0).toFixed(4)}</span>
                    <span>DEX: ${(opp.dex_price || 0).toFixed(4)}</span>
                    <span>Seen: ${timestamp}</span>
                </div>
            `;

            container.prepend(item);
            while (container.children.length > 6) {
                container.removeChild(container.lastChild);
            }
        }

        function addTrade(trade) {
            const container = document.getElementById('tradesList');
            if (!trade) return;

            if (container.firstElementChild && container.firstElementChild.classList.contains('alert')) {
                container.innerHTML = '';
            }

            const item = document.createElement('div');
            item.className = `trade-item ${trade.executed ? '' : 'dry-run'}`;
            const timestamp = trade.timestamp ? new Date(trade.timestamp).toLocaleTimeString() : '--';
            const chain = trade.chain || 'ethereum';
            const sizeText = trade.base_qty
                ? `${trade.base_qty.toFixed(4)} base`
                : trade.borrow_amount_eth
                    ? `${trade.borrow_amount_eth.toFixed(2)} ETH borrow`
                    : '--';
            const notional = trade.notional_quote ? `${trade.notional_quote.toFixed(2)} quote` : '';
            const execLabel = trade.executed ? 'Executed' : 'Dry run';
            const modeLabel = trade.mode ? trade.mode : 'regular';

            item.innerHTML = `
                <div class="opportunity-header">
                    <span class="opportunity-symbol">${trade.symbol || ''}</span>
                    <span class="opportunity-profit">${execLabel}</span>
                </div>
                <div class="opportunity-details">
                    <span>Mode: ${modeLabel}</span>
                    <span>Chain: ${chain}</span>
                    <span>Size: ${sizeText}</span>
                    ${notional ? `<span>Notional: ${notional}</span>` : ''}
                    <span>Edge: ${trade.edge_bps ? trade.edge_bps.toFixed(2) + ' bps' : '--'}</span>
                    <span>Tx: ${trade.tx_hash ? trade.tx_hash.slice(0, 10) + '...' : 'N/A'}</span>
                    <span>Time: ${timestamp}</span>
                </div>
            `;

            container.prepend(item);
            while (container.children.length > 6) {
                container.removeChild(container.lastChild);
            }

            if (trade.executed) {
                tradeStatus.textContent = 'Latest trade executed';
                tradeStatus.className = 'pill green';
            }
        }

        function showAlert(message, type = 'info') {
            const alertsDiv = document.getElementById('alerts');
            const alertClass = type === 'error' ? 'alert-warning' :
                             type === 'success' ? 'alert-success' : '';

            const alert = document.createElement('div');
            alert.className = `alert ${alertClass}`;
            alert.innerHTML = `<strong>${type === 'error' ? '‚ùå' : type === 'success' ? '‚úÖ' : '‚ÑπÔ∏è'} ${message}</strong>`;

            alertsDiv.appendChild(alert);
            setTimeout(() => alert.remove(), 5000);
        }

        function formatUptime(seconds) {
            const hours = Math.floor(seconds / 3600);
            const minutes = Math.floor((seconds % 3600) / 60);
            const secs = seconds % 60;
            return `${hours}h ${minutes}m ${secs}s`;
        }

        // Initialize
        connectWebSocket();

        // Set initial execution mode display
        setExecutionMode();

        setInterval(() => {
            if (isRunning) {
                loadStatus();
            }
        }, 5000);

        // Add event listeners to checkboxes to update UI immediately
        document.getElementById('dryRunToggle').addEventListener('change', function() {
            dryRunMode = this.checked;
            if (dryRunMode) {
                autoExecuteMode = false;
                document.getElementById('autoExecuteToggle').checked = false;
            }
            setExecutionMode();
        });

        document.getElementById('autoExecuteToggle').addEventListener('change', function() {
            if (this.checked && dryRunMode) {
                // Can't enable auto-execute in dry run mode
                this.checked = false;
                showAlert('Cannot enable auto-execute while in dry-run mode. Uncheck "Dry run" first.', 'error');
                return;
            }
            autoExecuteMode = this.checked && !dryRunMode;
            setExecutionMode();
        });
    </script>
</body>
</html>
